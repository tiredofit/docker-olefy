#!/usr/bin/with-contenv bash

CONFIG_FILE=${CONFIG_FILE:-"olefy.conf"}
CONFIG_PATH=${CONFIG_PATH:-"/etc/"}
LISTEN_IP=${LISTEN_IP:-"0.0.0.0"}
LISTEN_PORT=${LISTEN_PORT:-"1055"}
LOG_FILE=${LOG_FILE:-"olefy.log"}
LOG_LEVEL=${LOG_LEVEL:-"INFO"}
LOG_PATH=${LOG_PATH:-"/logs/"}
LOG_TYPE=${LOG_TYPE:-"CONSOLE"}
SETUP_TYPE=${SETUP_TYPE:-"AUTO"}
TMP_PATH=${TMP_PATH:-"/tmp/olefy/"}
MINIMUM_CHARACTER_LENGTH=${MINIMUM_CHARACTER_LENGTH:-"500"}
DELETE_TEMP_FILES=${DELETE_TEMP_FILES:-"TRUE"}
DELETE_TEMP_FILES_FAILED=${DELETE_TEMP_FILES_FAILED:-"TRUE"}

if [ "${DELETE_TEMP_FILES}" = "TRUE" ] || [ "${DELETE_TEMP_FILES}" = "true" ] || [ "${DELETE_TEMP_FILES}" = "1" ] ; then
    DELETE_TEMP_FILES=1
else
    DELETE_TEMP_FILES=0
fi

if [ "${DELETE_TEMP_FILES_FAILED}" = "TRUE" ] || [ "${DELETE_TEMP_FILES_FAILED}" = "true" ] || [ "${DELETE_TEMP_FILES_FAILED}" = "1" ] ; then
    DELETE_TEMP_FILES_FAILED=1
else
    DELETE_TEMP_FILES_FAILED=0
fi
